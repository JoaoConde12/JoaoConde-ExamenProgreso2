<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JoaoConde_ExamenProgreso2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JoaoConde_ExamenProgreso2"
    Title="JoaoConde_ExamenProgreso2">

    <TabBar>
        <Tab Title="Inicio" Icon="home_icon.png">
            <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>

        <Tab Title="Nombres y apellidos" Icon="name_icon.png">
            <ShellContent
            Title="Nombres y apellidos"
            ContentTemplate="{DataTemplate local:GridLayout}"
            Route="GridLayout" />
        </Tab>
    </TabBar>

</Shell>
